<Window x:Name="My_Windows_Media" x:Class="MyWindowsMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Media Player" Height="392" Width="453" 
        SizeToContent="WidthAndHeight" ToolTip="Windows Media Player" 
        MinWidth="525" MinHeight="368" HorizontalContentAlignment="Stretch">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" Opacity="0.805">
            <GradientStop Color="Black" Offset="0.82"/>
            <GradientStop Color="Black" Offset="0.139"/>
            <GradientStop Color="#FF79BCFF" Offset="0.466"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid x:Name="Layout">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="422"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="240*"/>
                <RowDefinition Height="32*"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="21*"/>
            </Grid.RowDefinitions>
            <!-- Media Element -->
            <MediaElement x:Name="MyMediaPlayer" Grid.ColumnSpan="3" Grid.Column="1" MinWidth="497" MinHeight="230" Panel.ZIndex="1" Margin="0,10,0,5" Grid.Row="1"/>

            <!-- Slider Time -->
            <Slider x:Name="SliderProgress" MinWidth="490" MinHeight="22" ToolTip="Rechercher" HorizontalContentAlignment="Stretch" Grid.ColumnSpan="3" Grid.Row="2" ValueChanged="Slider_ValueChanged" Margin="10,0,0,0" VerticalAlignment="Top" Grid.Column="1" Height="22"/>

            <!-- Background Buttons -->
            <Border BorderThickness="2" Grid.Row="3" CornerRadius="25" BorderBrush="White" Grid.Column="2" Background="#FFA09696"></Border>

            <!-- Buttons -->
            <Button x:Name="Stop" HorizontalAlignment="Left" Margin="129,12,0,0" Grid.Row="3" VerticalAlignment="Top" Width="28" Grid.Column="2" Height="26" BorderBrush="White" Panel.ZIndex="1" Background="{x:Null}" ToolTip="Stop" BorderThickness="0" Click="StopClick">
                <Image Source="../Images/Stop.png" VerticalAlignment="Center" ToolTip="Stop"></Image>
            </Button>
            <Button x:Name="Previous" Grid.Column="2" HorizontalAlignment="Left" Margin="162,12,0,0" Grid.Row="3" VerticalAlignment="Top" Width="28" Height="26" BorderThickness="0" BorderBrush="White" Background="{x:Null}" Panel.ZIndex="1" ToolTip="Précédent">
                <Image Source="../Images/Left.png" />
            </Button>
            <Button x:Name="Play" HorizontalAlignment="Center" Height="42" Margin="195,4,186,2" VerticalAlignment="Center" Width="41" BorderBrush="White" Panel.ZIndex="1" OpacityMask="Black" ToolTip="Lire" Grid.Column="2" Grid.Row="3" BorderThickness="0" Background="{x:Null}" Click="PlayClick">
                <Image Source="../Images/Play.png" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Button>
            <Button x:Name="Left" Grid.Column="2" HorizontalAlignment="Left" Height="26" Margin="241,12,0,0" Grid.Row="3" VerticalAlignment="Top" Width="28" BorderBrush="White" BorderThickness="0" Background="{x:Null}" ToolTip="Suivant">
                <Image x:Name="Next" Source="../Images/Right.png" />
            </Button>
            <Button x:Name="Sound" Grid.Column="2" HorizontalAlignment="Left" Height="26" Margin="289,12,0,0" Grid.Row="3" VerticalAlignment="Top" Width="28" BorderBrush="White" BorderThickness="0" Background="{x:Null}" Click="MuteClick" ToolTip="Volume">
                <Image Source="../Images/Volume.png" />
            </Button>

            <!-- Volume -->
            <Slider x:Name="SliderVolume" HorizontalAlignment="Center" Height="22" Margin="324,12,14,14" Width="84" ToolTip="Volume" Maximum="1" Value="1" VerticalAlignment="Center" Grid.Column="2" Grid.Row="3" MinHeight="22" MinWidth="83" ValueChanged="ChangeMediaVolume" />

            <Menu IsMainMenu="True" Grid.ColumnSpan="5" Background="#FF2B2626">

                <MenuItem Header="_File" Foreground="Snow">
                    <MenuItem Header="_Open file" Foreground="Black" Click="OpenClick"/>
                    <MenuItem Header="_Add to playlist" Foreground="Black"/>
                    <MenuItem Header="_Quit" Foreground="Black"/>
                </MenuItem>
                <MenuItem Header="_Playlist" Foreground="Snow">
                    <MenuItem Header="_Save playlist" Foreground="Black"/>
                    <MenuItem Header="_Open playlist" Foreground="Black"/>
                </MenuItem>
            </Menu>
        </Grid>

    </Grid>
</Window>
