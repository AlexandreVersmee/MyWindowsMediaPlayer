<Window x:Class="WpfApplication2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="320*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        
        <MediaElement x:Name="MyMediaPlayer" Source="uri" Width="200"/>
          
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="play" Content="play"  VerticalAlignment="Top" Height="25" Width="50" Margin="5" Click="play_Click"/>
            <Button x:Name="fullScreen" Content="full screen"  VerticalAlignment="Top" Height="25" Width="50" Margin="5" Click="fullScreen_Click" />
            <Button x:Name="open" Content="open"  VerticalAlignment="Top" Height="25" Width="50" Margin="5" Click="open_Click" />
            <Button x:Name="mute" Content="mute"  VerticalAlignment="Top" Height="25" Width="50" Margin="5,6,5,0" Click="mute_Click" />
        </StackPanel>

    </Grid>
</Window>
